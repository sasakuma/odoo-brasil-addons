<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_br_nfse_account_invoice_form" model="ir.ui.view">
        <field name="name">view_br_nfse.account.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="br_account.view_br_account_invoice_form"/>
        <field name="arch" type="xml">
            <div class="alert alert-info" position="after">
                <field name="ambiente_nfse" invisible="1"/>
                <field name="invoice_model" invisible="1"/>
                <field name="webservice_nfse" invisible="1"/>
                <div class="alert alert-danger" role="alert" style="margin-bottom:0px;"
                     attrs="{'invisible': ['|', ('ambiente_nfse', '==', '1'), ('invoice_model', '!=', '001')]}">
                    A NFSe está em ambiente de homologação
                </div>
                <div class="alert alert-success" role="alert" style="margin-bottom:0px;" attrs="{'invisible': ['|', ('invoice_model', '!=', '001'),('sending_nfe', '==', False)]}">
                    Sua
                    <b>NFSe de número
                        <field name="nfse_number" class="oe_inline"/>
                    </b>
                    está na fila de envio.
                    <button name="action_view_edocs"
                            type="object"
                            class="label label-primary"
                            context="{'search_default_invoice_id': id}"
                            string="Visualizar Fila">
                    </button>
                </div>
                <div class="alert alert-danger" role="alert" style="margin-bottom:0px;" attrs="{'invisible': ['|', ('invoice_model', '!=', '001'),('nfe_exception', '==', False)]}">
                    Ocorreu um erro com a
                    <b>NFSe de número<field name="nfse_exception_number" class="oe_inline"/>.
                    </b>
                    <button name="action_view_edocs"
                            type="object"
                            class="label label-primary"
                            context="{'search_default_invoice_id': id }"
                            string="Visualizar NFe">
                    </button>
                    <br/>
                    <field name="nfse_status"/>
                </div>
            </div>
        </field>
    </record>

    <record id="action_print_danfse" model="ir.actions.server">
        <field name="name">DANFE de Serviço</field>
        <field name="model_id" ref="model_account_invoice"/>
        <field name="state">code</field>
        <field name="code">
            if records:
            action = records.action_print_danfse()
        </field>
    </record>

    <record id="ir_value_action_print_danfse" model="ir.values">
        <field name="name">ir.value.server.print.danfse</field>
        <field name="model_id" ref="model_account_invoice"/>
        <field name="model">account.invoice</field>
        <field name="key2">client_print_multi</field>
        <field eval="'ir.actions.server,%d'%action_print_danfse" name="value"/>
    </record>

</odoo>
