<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_move_line_form" model="ir.ui.view">
        <field name="name">account.move.line.view.form</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="br_account.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_register_payment" class="btn btn-primary btn-sm"
                            type="object" string="Receber" groups="account.group_account_invoice"
                            attrs="{'invisible': ['|',('reconciled', '!=', False),('debit', '=', 0)]}"/>

                    <button name="action_register_payment" class="btn btn-primary btn-sm"
                            type="object" string="Pagar" groups="account.group_account_invoice"
                            attrs="{'invisible': ['|',('reconciled', '!=', False), ('credit', '=', 0)]}"/>
                </header>
            </xpath>
        </field>
    </record>
</odoo>