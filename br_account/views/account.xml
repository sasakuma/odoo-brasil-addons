<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="br_account_payment_term_form" model="ir.ui.view">
        <field name="name">br_account.payment.term.form</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <field name="active" position="after">
                <field name="indPag" required="1"/>
            </field>
        </field>
    </record>

    <record id="view_account_form" model="ir.ui.view">
        <field name="name">br_account.account.account.form</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="code_first_digit"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_line_form" model="ir.ui.view">
        <field name="name">account.move.line.form</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field eval="2" name="priority"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook/page[1]" position="attributes">
                <attribute name="string">Accounting</attribute>
            </xpath>

            <xpath expr="//field[@name='date_maturity']/ancestor::group[1]" position="replace"/>

            <xpath expr="//field[@name='blocked']/ancestor::group[1]" position="replace"/>

            <xpath expr="//notebook/page[1]" position="after">
                <page string="Financial">
                    <group>
                        <group name="operation" string="Operation">
                            <field name="financial_operation_id"
                                   attrs="{'readonly':[('reconciled','=', True)]}"/>
                            <field name="title_type_id"
                                   attrs="{'readonly':[('reconciled','=', True)]}"/>
                            <!--<field name="pin_date"-->
                                   <!--attrs="{'readonly':[('reconciled','=', True)]}"/>-->
                            <!--<field name="amount_day"-->
                                   <!--attrs="{'readonly':[('reconciled','=', True)]}"/>-->
                        </group>
                        <group name="dates" string="Dates">
                            <field name="date_maturity"
                                   attrs="{'readonly':[('reconciled','=', True)]}"/>
                        </group>
                        <group name="states" string="States">
                            <field name="blocked"
                                   attrs="{'readonly':[('reconciled','=', True)]}"/>
                        </group>
                    </group>
                </page>
            </xpath>

            <field name="account_id" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('reconciled','=',True)]}
                </attribute>
            </field>

            <field name="debit" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('reconciled','=',True)]}
                </attribute>
            </field>

            <field name="credit" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('reconciled','=',True)]}
                </attribute>
            </field>

            <field name="quantity" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('reconciled','=',True)]}
                </attribute>
            </field>

            <field name="move_id" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('reconciled','=',True)]}
                </attribute>
            </field>

             <field name="full_reconcile_id" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('reconciled','=',True)]}
                </attribute>
            </field>

            <field name="name" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('reconciled','=',True)]}
                </attribute>
            </field>

            <field name="ref" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('reconciled','=',True)]}
                </attribute>
            </field>

            <field name="partner_id" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('reconciled','=',True)]}
                </attribute>
            </field>

            <field name="journal_id" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('reconciled','=',True)]}
                </attribute>
            </field>

            <field name="date" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('reconciled','=',True)]}
                </attribute>
            </field>

            <field name="date" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('reconciled','=',True)]}
                </attribute>
            </field>

            <field name="name">
                <field name="name"/>
            </field>

        </field>
    </record>

</odoo>
