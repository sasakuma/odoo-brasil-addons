<odoo>
    <!-- account.move inherit form view -->
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.inherit.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='ref']" position="after">
                <field name="parcel_id"/>
            </xpath>

            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="invoice_id"/>
                <field name="company_currency_id"/>
                <field name="amount_residual"/>
                <field name="amount_residual_currency"/>
            </xpath>

            <field name="amount" position="replace"/>

            <xpath expr="//notebook/page[last()]" position="after">
                <page string="Financial">
                    <group>
                        <group name="operation" string="Operation">
                            <field name="financial_operation_id"/>
                            <field name="title_type_id"/>
                        </group>
                        <group name="dates" string="Dates">
                            <field name="date_maturity_current"/>
                            <field name="date_maturity_origin"/>
                        </group>
                        <group name="total" string="Total">
                            <field name="amount"/>    
                            <field name="amount_origin"/>    
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>